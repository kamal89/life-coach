# =============================================================================
# AI Life Coach Frontend - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Application Settings
REACT_APP_NAME="AI Life Coach"
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION="Your personal AI-powered life coach"

# Environment
NODE_ENV=development
GENERATE_SOURCEMAP=true

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# External Services
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_HOTJAR_ID=

# Development Tools
REACT_APP_DEBUG_MODE=true
REACT_APP_SHOW_DEVTOOLS=true

# Theming
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true

# Performance
REACT_APP_CACHE_DURATION=300000
REACT_APP_API_TIMEOUT=30000

# =============================================================================
# Production Environment Overrides
# =============================================================================
# When deploying to production, override these values:

# NODE_ENV=production
# REACT_APP_API_URL=https://your-api-domain.com/api
# REACT_APP_WS_URL=wss://your-api-domain.com
# REACT_APP_DEBUG_MODE=false
# REACT_APP_SHOW_DEVTOOLS=false
# GENERATE_SOURCEMAP=false